{
  "name": "kit-tools",
  "description": "Documentation framework for AI-assisted development. Provides session management, documentation templates, and automation hooks.",
  "version": "1.2.2",
  "author": {
    "name": "WashingBearLabs",
    "email": "contact@washingbearlabs.com",
    "url": "https://www.washingbearlabs.com"
  },
  "license": "GPL-3.0",
  "repository": "https://github.com/WashingBearLabs/KitTools",
  "homepage": "https://www.washingbearlabs.com/docs",
  "keywords": [
    "documentation",
    "ai-assistant",
    "session-management",
    "templates",
    "kit",
    "raccoon"
  ],
  "skills": ["./skills"],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/create_scratchpad.py"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/sync_skill_symlinks.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/update_doc_timestamps.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/detect_phase_completion.py"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/validate_seeded_template.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/remind_scratchpad_before_compact.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/remind_close_session.py"
          }
        ]
      }
    ]
  }
}
